    <script>

        // Mostrar la fecha actual

        document.getElementById('fechaActual').textContent = 'Fecha actual: ' + new Date().toLocaleDateString('es-PE');



        // Lista de feriados por mes

        const feriados = {

            "Enero": ["Miércoles 1 de enero - Año Nuevo"],

            "Abril": ["Jueves 17 de abril - Jueves Santo", "Viernes 18 de abril - Viernes Santo"],

            "Mayo": ["Jueves 1 de mayo - Día del Trabajo"],

            "Junio": ["Sábado 7 de junio - Batalla de Arica y Día de la Bandera", "Domingo 29 de junio - Día de San Pedro y San Pablo"],

            "Julio": ["Miércoles 23 de julio - Día de la Fuerza Aérea del Perú", "Lunes 28 de julio - Fiestas Patrias", "Martes 29 de julio - Fiestas Patrias"],

            "Agosto": ["Miércoles 6 de agosto - Batalla de Junín", "Sábado 30 de agosto - Santa Rosa de Lima"],

            "Octubre": ["Miércoles 8 de octubre - Combate de Angamos"],

            "Noviembre": ["Sábado 1 de noviembre - Día de Todos los Santos"],

            "Diciembre": ["Lunes 8 de diciembre - Inmaculada Concepción", "Martes 9 de diciembre - Batalla de Ayacucho", "Jueves 25 de diciembre - Navidad"]

        };



        // Mostrar los feriados por mes

        function mostrarFeriados() {

            let contenido = '<ul class="holiday-list">';

            for (const mes in feriados) {

                contenido += `<li><strong>${mes}</strong>:</li><ul>`;

                feriados[mes].forEach(feriado => {

                    contenido += `<li class="holiday-item">${feriado}</li>`;

                });

                contenido += '</ul>';

            }

            contenido += '</ul>';

            document.getElementById('feriados').innerHTML = contenido;

        }



        // Llamar a la función para mostrar los feriados

        mostrarFeriados();



        // Función para calcular la hora de reingreso

        function calcularHoras() {

            let hora1 = parseInt(document.getElementById('hora1').value) || 0;

            let minuto1 = parseInt(document.getElementById('minuto1').value) || 0;

            let hora2 = parseInt(document.getElementById('hora2').value) || 0;

            let minuto2 = parseInt(document.getElementById('minuto2').value) || 0;



            let operacion = document.getElementById('operacion').value;



            let totalMinutos, totalHoras;



            if (operacion === "sumar") {

                totalMinutos = minuto1 + minuto2;

                totalHoras = hora1 + hora2 + Math.floor(totalMinutos / 60);

                totalMinutos = totalMinutos % 60;

            } else {

                totalMinutos = minuto1 - minuto2;

                totalHoras = hora1 - hora2;



                if (totalMinutos < 0) {

                    totalMinutos += 60;

                    totalHoras -= 1;

                }

            }



            document.getElementById('resultado').innerHTML = 

                "Hora de reingreso: " + totalHoras + " horas y " + totalMinutos + " minutos";

        }

    </script>

